                <Button x:Name="B2_1" Width="80" Height="80" UseLayoutRounding="True" Click="B2_1_Click"/>
                <Button x:Name="B3_1" Width="80" Height="80" UseLayoutRounding="True" Click="B3_1_Click"/>
                <Button x:Name="B4_1" Width="80" Height="80" UseLayoutRounding="True" Click="B4_1_Click"/>

            </StackPanel>
            <StackPanel Orientation="Vertical" Spacing="5" BorderThickness="1,1,1,1" Visibility="Visible">

                <Button x:Name="B0_2" Width="80" Height="80" UseLayoutRounding="True" Click="B0_2_Click"/>
                <Button x:Name="B1_2" Width="80" Height="80" UseLayoutRounding="True" Click="B1_2_Click"/>
                <Button x:Name="B2_2" Width="80" Height="80" UseLayoutRounding="True" Click="B2_2_Click"/>
                <Button x:Name="B3_2" Width="80" Height="80" UseLayoutRounding="True" Click="B3_2_Click"/>
                <Button x:Name="B4_2" Width="80" Height="80" UseLayoutRounding="True" Click="B4_2_Click"/>

            </StackPanel>
            <StackPanel Orientation="Vertical" Spacing="5" BorderThickness="1,1,1,1" Visibility="Visible">

                <Button x:Name="B0_3" Width="80" Height="80" UseLayoutRounding="True" Click="B0_3_Click"/>
                <Button x:Name="B1_3" Width="80" Height="80" UseLayoutRounding="True" Click="B1_3_Click"/>
                <Button x:Name="B2_3" Width="80" Height="80" UseLayoutRounding="True" Click="B2_3_Click"/>
                <Button x:Name="B3_3" Width="80" Height="80" UseLayoutRounding="True" Click="B3_3_Click"/>
                <Button x:Name="B4_3" Width="80" Height="80" UseLayoutRounding="True" Click="B4_3_Click"/>

            </StackPanel>
            <StackPanel Orientation="Vertical" Spacing="5" BorderThickness="1,1,1,1" Visibility="Visible">

                <Button x:Name="B0_4" Width="80" Height="80" UseLayoutRounding="True" Click="B0_4_Click"/>
                <Button x:Name="B1_4" Width="80" Height="80" UseLayoutRounding="True" Click="B1_4_Click"/>
                <Button x:Name="B2_4" Width="80" Height="80" UseLayoutRounding="True" Click="B2_4_Click"/>
                <Button x:Name="B3_4" Width="80" Height="80" UseLayoutRounding="True" Click="B3_4_Click"/>
                <Button x:Name="B4_4" Width="80" Height="80" UseLayoutRounding="True" Click="B4_4_Click"/>

            </StackPanel>

        </StackPanel>
        <Button x:Name="ResetButton" Content="Reset" Margin="10,440,0,0" VerticalAlignment="Top" Width="214" Visibility="Visible" Click="BRESET_Click"/>
        <Button x:Name="ShuffleButton" Content="Shuffle" Margin="227,440,0,0" VerticalAlignment="Top" Width="214" Visibility="Visible" Click="BSHUFFLE_Click"/>

    </Grid>
</Page>
